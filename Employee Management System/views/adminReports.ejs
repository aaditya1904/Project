<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>All Tasks</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="flex min-h-screen bg-gray-100">

  <aside style="background-color: #102E50;" class="w-64 text-white flex flex-col">
    <div class="p-6 text-xl font-semibold">EMPLOYEE MANAGEMENT</div>
    <nav class="flex-1 space-y-2 px-4">
      <a href="/admin" class="block py-2 px-4 rounded hover:bg-blue-800">Dashboard</a>
      <a href="/admin/attendance" class="block py-2 px-4 rounded hover:bg-blue-800">Attendance</a>
      <a href="/admin/tasks" class="block py-2 px-4 rounded hover:bg-blue-800">Tasks</a>
      <a href="/admin/reports" class="block py-2 px-4 rounded hover:bg-blue-800">Reports</a>
      <a href="/admin/settings" class="block py-2 px-4 rounded hover:bg-blue-800">Settings</a>
      <a href="/admin/logout" class="block py-2 px-4 rounded hover:bg-blue-800">Logout</a>
    </nav>
  </aside>

  <main class="flex-1 p-8">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold">All Tasks Overview</h1>
    </div>

    <!-- All Task Table -->
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4">Tasks in System</h2>
      <table class="w-full table-auto">
        <thead>
          <tr class="text-left text-gray-600 border-b">
            <th class="pb-2">Task Title</th>
            <th class="pb-2">Assigned To</th>
            <th class="pb-2">Status</th>
          </tr>
        </thead>
        <tbody>
          <% if (tasks.length > 0) { %>
            <% tasks.forEach(task => { %>
              <tr class="border-b hover:bg-gray-50">
                <td class="py-2"><%= task.title %></td>
                <td class="py-2">
                    <%= task.assignedTo && task.assignedTo.name ? task.assignedTo.name : 'Unassigned' %>
                  </td>                  
                <td class="py-2">
                  <span class="inline-block px-2 py-1 text-xs rounded
                    <% if (task.status === 'Completed') { %> bg-green-100 text-green-700
                    <% } else if (task.status === 'In Progress') { %> bg-yellow-100 text-yellow-700
                    <% } else { %> bg-gray-100 text-gray-700 <% } %>">
                    <%= task.status %>
                  </span>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="3" class="text-center text-gray-500 py-4">No tasks found</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </main>

</body>

</html>
