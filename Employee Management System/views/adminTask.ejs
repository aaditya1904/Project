<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Employee Tasks</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
</head>
<body class="flex min-h-screen bg-gray-100">
  <aside style="background-color: #102E50;" class="w-64 text-white flex flex-col">
    <div class="p-6 text-xl font-semibold">EMPLOYEE MANAGEMENT</div>
    <nav class="flex-1 space-y-2 px-4">
      <a href="/admin" class="block py-2 px-4 rounded hover:bg-blue-800">Dashboard</a>
      <a href="/admin/attendance" class="block py-2 px-4 rounded hover:bg-blue-800">Attendance</a>
      <a href="/admin/tasks" class="block py-2 px-4 rounded hover:bg-blue-800">Tasks</a>
      <a href="/admin/reports" class="block py-2 px-4 rounded hover:bg-blue-800">Reports</a>
      <a href="/admin/settings" class="block py-2 px-4 rounded hover:bg-blue-800">Settings</a>
      <a href="/admin/logout" class="block py-2 px-4 rounded hover:bg-blue-800">Logout</a>
    </nav>
  </aside>

  <main class="flex-1 p-8">
    <h1 class="text-2xl font-bold mb-4">Employee Task Management</h1>
    <!-- Assign Task Form -->
    <% if (!employee.some(emp => emp.task)) { %>
    <div class="bg-white shadow-lg rounded-lg p-8 max-width mx-auto mt-8">
      <h2 class="text-2xl font-semibold mb-6 text-center">Assign New Task</h2>
      <form action="/admin/tasks/assign" method="POST" class="space-y-6">
        
        <!-- Employee Selection -->
        <div>
          <label class="block text-gray-700 font-medium mb-2">Select Employee</label>
          <select name="employeeId" class="w-full border-2 border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <option value="">Select Employee</option>
            <% employee.forEach(function(emp) { %>
              <option value="<%= emp._id %>"><%= emp.name %> - <%= emp.email %></option>
            <% }) %>
          </select>
        </div>
    
        <!-- Task Title -->
        <div>
          <label class="block text-gray-700 font-medium mb-2">Task Title</label>
          <input type="text" name="title" required class="w-full border-2 border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
        </div>
    
        <!-- Task Description -->
        <div>
          <label class="block text-gray-700 font-medium mb-2">Task Description</label>
          <textarea name="description" required class="w-full border-2 border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"></textarea>
        </div>
    
        <!-- Submit Button -->
        <div class="text-center">
          <button type="submit" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
            Assign Task
          </button>
        </div>
      </form>
    </div>
    <% } %>
    

  </main>

</body>
</html>
